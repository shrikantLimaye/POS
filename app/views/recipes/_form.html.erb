<%= form_with(model: recipe, local: true) do |f| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, id: :recipe_title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, id: :recipe_description %>
  </div>

  <div class="field">
    <%= f.label :category %>
    <%= f.text_field :category, id: :recipe_category %>
  </div>

  <div class="field">
    <%= f.label :recipe_image %>
    <%= f.text_area :recipe_image, id: :recipe_recipe_image %>
  </div>

  <h3>Ingredients</h3>
  <div id='ingredients'>
    <%= f.fields_for :ingredient_recipe_line_items do |ingredient| %>
      <%= render 'ingredient_recipe_line_item_fields', f: ingredient %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'Add Ingredient', f, :ingredient_recipe_line_items %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
